<%- model_class = PrincipalGroupe -%>
<div class="page-header">
  <h1><%=t '.title', :default => PrincipalGroupe %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @principal_groupes.each do |principal_groupe| %>
      <tr>
        <td><%= principal_groupe.id %></td>
        <td><%= principal_groupe.name %></td>
        <td><%=l principal_groupe.created_at, format: :long %></td>
        <td>
          <%= link_to principal_groupe_path(principal_groupe), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to principal_groupe_path(principal_groupe), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_principal_groupe_path,
            :class => 'btn btn-primary' %>

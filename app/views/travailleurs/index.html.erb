<h1>Listing travailleurs</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Principal groupe</th>
      <th>Sous groupe</th>
      <th>Agence</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travailleurs.each do |travailleur| %>
      <tr>
        <td><%= travailleur.nom %></td>
        <td><%= travailleur.principal_groupe %></td>
        <td><%= travailleur.sous_groupe %></td>
        <td><%= travailleur.agence %></td>
        <td><%= travailleur.user %></td>
        <td><%= link_to 'Show', travailleur %></td>
        <td><%= link_to 'Edit', edit_travailleur_path(travailleur) %></td>
        <td><%= link_to 'Destroy', travailleur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

